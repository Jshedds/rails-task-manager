<h1><%= @task.title %></h1>
<%= link_to 'Edit this task', edit_path %>
<p><%= @task.details %></p>
<br>
<% if @task.completed == true %>
  <%= 'This task is completed' %>
<% else %>
  <%= 'This task is not complete yet' %>
<% end %>
<br>
<%= link_to 'Back to list', tasks_path %>
<br>
<%= link_to 'Delete', task_path(@task), data: {turbo_method: :delete, turbo_confirm: 'Are you sure?'} %>
